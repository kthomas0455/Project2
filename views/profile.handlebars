<div id="page_content">
  <div class="left_side_bar">
    <div class="col_1">
      <div class="box2" style="margin-top: 10px;">
        <div class="lobster info">Artist Info:</div>
        <div style="padding-top: 19px; text-decoration: none;">
          <h5>Location: {{artist.location}}</h5>
        </div>
        <div></div>
        <div style="padding-top: 10px; text-decoration: none;">
          <h5>Shop or Independent Artist: {{artist.independent}}</h5>
        </div>
        <div></div>
        <div style="padding-top: 10px; text-decoration: none;">
          <h5>Hourly Rate ($/hr): {{artist.hourlyRate}}</h5>
        </div>
        <div></div>
        <div style="padding-top: 10px; text-decoration: none;">
          <h5>Shop Minimum ($): {{artist.artistMin}}</h5>
        </div>
        <div></div>
        <div style="padding-top: 10px; text-decoration: none;">
          <h5>Preffered Style: {{artist.stylePref}}</h5>
        </div>
        <div></div>
        <div style="padding-top: 10px;">
          <a href="{{artist.artistInsta}}" class="card-link">View Instagram </a>
          <br>
          <br>
          <a href="{{artist.shopLink}}" class="card-link">Contact Shop </a>
        </div>
      </div>
    </div>
  </div>


  <!-- Artist Name -->
  <div class="right_section">

    <div class="common_content" style="margin-top: 10px;">
      <h1 id="artist_name" class="lobster">
        <div id="artist_name">{{{artist.artistName}}}</div>
      </h1>

      <br>

      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-bottom: 40px;">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="/images/artist-images/{{artist.artistName}}/{{artist.artistName}}1.jpg" style="width: 100%; height: 500px;"
              alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/artist-images/{{artist.artistName}}/{{artist.artistName}}2.jpg" style="width: 100%; height: 500px;"
              alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/artist-images/{{artist.artistName}}/{{artist.artistName}}3.jpg" style="width: 100%; height: 500px;"
              alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>


      <h1 id="artist_name" class="lobster" style="margin-top: 15px;">Bio: </h1>
      <p>{{{artist.artistBio}}}</p>

      <h1 id="artist_name" class="lobster" style="margin-top: 15px;">Additional Comments: </h1>
      <p>{{{artist.artistComments}}}</p>
    </div>

    <br>
    <br>

    <div class="box2" style="margin-top: 0px; margin-bottom: 30px; margin-right: 0px;">
      <h1 id="artist_name" class="lobster" style="margin-top: 15px;">Instant Contact!</h1>
      <form action="/leads" method="POST">
        <p>Fill out the information below (all fields required) in order to send this artist an inquiry.</p>
        <br>
        <div class="form-group">
          <label for="name">Your Name</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="John Doe">
        </div>
        <div class="form-group">
          <label for="phone">Your Phone Number</label>
          <input type="text" class="form-control" name="phone" id="phone" placeholder="+19165559999">
        </div>
        <div class="form-group">
          <label for="message">Add your message here!</label>
          <textarea class="form-control" name="message" id="message" rows="3"></textarea>
        </div>
        <button class="btn btn-outline-secondary" id="text-button" type="submit">Send Inquiry</button>
      </form>
    </div>

  </div>

  <script src="/form.js" type="javascript"></script>